<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>.</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>executable/</exclude>
                <exclude>*.local.json</exclude>
                <exclude>*.local.properties</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/executable</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*.cmd</include>
                <include>*.sh</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
